<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="@string/phone"
        android:title="Номер телефона"
        android:summary="Номер телефона для отправки СМС"
        android:defaultValue=""
        android:dialogTitle="Введите номер телефона, для отправки СМС)" />

    <ListPreference
        android:defaultValue="30"
        android:entries="@array/ref_titles"
        android:entryValues="@array/ref_values"
        android:key="@string/ref_minutes"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Периодичность отправки СМС" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="SMS"
        android:summary="@string/SMS_summary"
        android:title="@string/SMS_title"/>

</PreferenceScreen>